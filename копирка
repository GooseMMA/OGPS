import sys
from core import license_manager

def main():
    print("üîπ –ó–∞–ø—É—Å–∫ GameHelper...")

    # –°–æ–∑–¥–∞—ë–º –æ–±—ä–µ–∫—Ç –º–µ–Ω–µ–¥–∂–µ—Ä–∞ –ª–∏—Ü–µ–Ω–∑–∏–π
    lm = license_manager.LicenseManager()

    # –ü—Ä–æ–≤–µ—Ä—è–µ–º –ª–∏—Ü–µ–Ω–∑–∏—é
    if not lm.ensure_license_interactive():
        print("‚ùå –ü—Ä–æ–≥—Ä–∞–º–º–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞. –ù–µ—Ç –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª—å–Ω–æ–π –ª–∏—Ü–µ–Ω–∑–∏–∏.")
        sys.exit(1)

    # –ï—Å–ª–∏ –≤—Å—ë —Ö–æ—Ä–æ—à–æ, –ø—Ä–æ–¥–æ–ª–∂–∞–µ–º —Ä–∞–±–æ—Ç—É
    days_left = lm.days_left()
    print(f"‚úÖ –õ–∏—Ü–µ–Ω–∑–∏—è –∞–∫—Ç–∏–≤–Ω–∞. –û—Å—Ç–∞–ª–æ—Å—å {days_left} –¥–Ω–µ–π.")
    print("üöÄ –ó–∞–ø—É—Å–∫ –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è...")

    # –ó–¥–µ—Å—å –±—É–¥–µ—Ç –∑–∞–ø—É—Å–∫ —Ç–≤–æ–µ–≥–æ GUI –∏–ª–∏ –æ—Å–Ω–æ–≤–Ω–æ–π –ª–æ–≥–∏–∫–∏
    # (–Ω–∞–ø—Ä–∏–º–µ—Ä, import app; app.run() ‚Äî –µ—Å–ª–∏ –ø–æ–∑–∂–µ –¥–æ–±–∞–≤–∏—à—å GUI)
    input("–ù–∞–∂–º–∏—Ç–µ Enter –¥–ª—è –≤—ã—Ö–æ–¥–∞...")

if __name__ == "__main__":
    main()