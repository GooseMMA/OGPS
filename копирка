import random

stones = 15
k = 3

print("Уровень робота: 1 - лёгкий, 2 - умный")
level = int(input("Выберите уровень: "))

while stones > 0:
    print(f"\nВ куче {stones} камней.")
    
    # ход игрока
    move = int(input("Ваш ход (1-3): "))
    while move < 1 or move > k or move > stones:
        move = int(input("Неверно, попробуйте ещё раз (1-3): "))
    stones -= move
    if stones == 0:
        print("Вы взяли последний камень — вы проиграли!")
        break

    # ход робота
    print(f"\nХод робота...")
    if level == 1:
        bot = random.randint(1, min(k, stones))
    else:
        # умный ход
        if stones % (k+1) == 0:
            bot = random.randint(1, min(k, stones))  # если позиция проигрышная — рандом
        else:
            bot = stones % (k+1)
    print(f"Робот взял: {bot}")
    stones -= bot

    if stones == 0:
        print("Робот взял последний камень — вы выиграли!")
        break